{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FGFCReport",
  "type": "object",
  "additionalProperties": false,
  "required": ["items"],
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["claim", "evidence"],
        "properties": {
          "claim": {"type": "string", "minLength": 1},
          "evidence": {
            "type": "array",
            "items": {"type": "string", "minLength": 1}
          },
          "error_type": {"type": ["string", "null"], "minLength": 1},
          "correction": {"type": ["string", "null"], "minLength": 1}
        }
      }
    }
  }
}
